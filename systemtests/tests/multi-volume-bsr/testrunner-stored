# Check that the stored correctly handles the weird bsr.
#

set -e
set -o pipefail
set -u

TestName="$(basename "$(pwd)")"
export TestName

#shellcheck source=../environment.in
. ./environment

#shellcheck source=../scripts/functions
. "${rscripts}"/functions

start_test

cat <<END_OF_DATA >"$tmp/bconcmds"
@$out ${NULL_DEV}
messages
@$out ${LOGHOME}/restore.out
restore client=bareos-fd bootstrap="${LOGHOME}/bootstrap.out" select all done yes
wait
messages
END_OF_DATA

run_bconsole
check_for_zombie_jobs storage=File

expect_grep "Restore OK" \
	    "${LOGHOME}/restore.out" \
	    "Restore job was not successful"

check_restore_diff "${BackupDirectory}"

expect_grep "${INCRCONTENT}" \
            "${RestoreDirectory}/$(realpath ${FILE})" \
            "Did not restore file correctly"
end_test
