set -e
set -u
echo "PRETEST: running $0 script"
echo "PRETEST: @TEST_INFO_TEXT@"
echo "PRETEST: checking for executable @CMAKE_BINARY_DIR@/core/src/dird/${CMAKE_CONFIG_TYPE}/bareos-dir.exe"
if [ ! -x "@CMAKE_BINARY_DIR@/core/src/dird/${CMAKE_CONFIG_TYPE}/bareos-dir.exe" ]; then
    echo "PRETEST:  ERROR: could not find director executable. Forgot to build?"
    exit 1
fi

hostname=@hostname@
echo -n "PRETEST: checking configured hostname ($hostname) ... "
if [ "$hostname" != "localhost" \
  -a "$hostname" != "127.0.0.1" \
  -a "$hostname" != "::1" ]; then
  if [ "$hostname" != "$(hostname)" ]; then
    echo "current hostname is different ($(hostname))"
    echo "   please run cmake again, probably after removing CMakeCache.txt"
  fi
fi
echo "OK"

echo -n "PRETEST: checking postgresql connection ... "
if ! psql postgres <<< "SELECT version()" 2>&1 >/dev/null; then
  echo "could not connect postgresql server"
  exit 1
else
  echo "OK"
fi

echo "PRETEST: stopping and removing existing nssm services"
for service in $(nssm list | grep bareos_ | dos2unix);
do
  nssm stop $service
  nssm remove $service confirm
  echo -n "."
done

echo "PRETEST: Setting Plugin Directory for CMAKE_CONFIG_TYPE:${CMAKE_CONFIG_TYPE}"
for file in systemtests/tests/autoxflate/etc/bareos/bareos-sd.d/storage/bareos-sd.conf\
        systemtests/tests/autoxflate/etc/bareos-sd1/bareos-sd.d/storage/bareos-sd.conf\
        systemtests/tests/bareos-basic/etc/bareos/bareos-sd.d/storage/bareos-sd.conf\
        systemtests/tests/heartbeat-interval/etc/bareos/bareos-fd.d/client/myself.conf\
        systemtests/tests/py3plug-dir/etc/bareos/bareos-dir.d/director/bareos-dir.conf\
        systemtests/tests/py3plug-fd-basic/etc/bareos/bareos-fd.d/client/myself.conf\
        systemtests/tests/py3plug-fd-local-fileset-basic/etc/bareos/bareos-fd.d/client/myself.conf\
        systemtests/tests/py3plug-fd-local-fileset-restoreobject/etc/bareos/bareos-fd.d/client/myself.conf\
        systemtests/tests/py3plug-sd/etc/bareos/bareos-sd.d/storage/bareos-sd.conf\
        systemtests/tests/python-bareos/etc/bareos/bareos-fd.d/client/myself.conf;
do
  case "$file" in
    *sd.d* ) REQUIRED_PLUGIN_DIR=\"@CMAKE_BINARY_DIR@/core/src/plugins/stored/${CMAKE_CONFIG_TYPE}\";;
    *fd.d* ) REQUIRED_PLUGIN_DIR=\"@CMAKE_BINARY_DIR@/core/src/plugins/filed/${CMAKE_CONFIG_TYPE}\";;
    *dir.d* ) REQUIRED_PLUGIN_DIR=\"@CMAKE_BINARY_DIR@/core/src/plugins/dird/${CMAKE_CONFIG_TYPE}\";;
  esac
  sed -i'' "s~Plugin Directory.*~Plugin Directory = $REQUIRED_PLUGIN_DIR~g" "$file"
done

